UPDATE order_accessories, client_orders SET order_accessories.COMPANY=client_orders.COMPANY WHERE order_accessories.ORDER_ID=client_orders.ID;
ALTER TABLE `order_accessories`  ADD `EMAIL` VARCHAR(150) NOT NULL  AFTER `COMPANY`;
